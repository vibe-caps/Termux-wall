<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#80FFFFFF"/> <!-- semi-transparent white border -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Glass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF"/> <!-- transparent white -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>
